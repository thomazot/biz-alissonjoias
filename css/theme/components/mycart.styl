.mycart
    &__header
        position: relative

        a
            display: flex
            align-items: center

        .ico
            width: 18px
            height: 28px
            color: var(--primary-contrast)

        .text
            margin-left: 19px
            color: var(--primary-contrast)
            font-weight: regular
            font-size: 14px
            opacity: .5

        .qtd
            position: absolute
            top: -10px
            left: 9px
            display: flex
            justify-content: center
            align-items: center
            width: 20px
            height: 20px
            border-radius: 50%
            background: var(--primary)
            box-shadow: 0 0 0 3px black
            color: var(--primary-contrast)
            font-weight: bold
            font-size: 10px

    &__content
        display: none !important